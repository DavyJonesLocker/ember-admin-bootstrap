<div class='edit panel panel-default col-md-6'>
  <div class="panel-body">
    <h2>Edit {{id}}</h2>

    <form role="form">
      {{#each column in filteredColumns}}
      <div {{bind-attr class=":model-column column :form-group"}}>
          <label>
            {{column}}
            {{admin-input columnValue=column class="form-control"}}
          </label>
        </div>
      {{/each}}

      {{async-button action="save" default="Save" pending="Saving..." fulfilled="Saved" rejected="Error" class="save btn btn-primary"}}
      {{async-button action="destroyRecord" default="Delete" pending="Deleting..." fulfilled="Deleted" class="delete btn btn-danger"}}
      <button {{action "cancel"}} class="cancel btn">Cancel</button>
    </form>

    <h2>Relationships</h2>

    {{#each relationshipType in relationshipTypes}}
      {{#each relationship in relationshipType}}
        <h4>{{relationship.name}}</h4>
        {{model-records-table recordType=relationship.type records=relationship.records relationshipName=relationship.inverse relationshipId=id}}
      {{/each}}
    {{/each}}
  </div>
</div>
